@model IEnumerable<ClientBLL.ViewModels.QuestionView>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="form-horizontal">
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm("Index", "Questions", FormMethod.Get))
            {
                <div class="input-group form">
                    <input type="text" class="form-control" placeholder="question" name="Name" value="@Request.Params["Name"]">
                    <input type="text" class="form-control" placeholder="description" name="Description" value="@Request.Params["Description"]">
                    <span class="input-group-btn">
                        <input type="submit" class="btn btn-primary" value="Search" />
                    </span>
                </div>
            }

        </div>
    </div>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionDate)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedAt)
        </td>
     
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Toggle status", "ToggleStatus", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
